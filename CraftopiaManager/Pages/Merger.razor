@page "/merger"

<div class="container">
    <div class="row mt-4">
        <div class="col-5 p-2 d-flex justify-content-center">
            <Savefile />
        </div>
        <div class="col-2 p-2 d-flex justify-content-center">
            <div class="row-2">
                <div class="btn-group-vertical btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary @(activeButtons == ActiveButton.Maps ? "active" : "")">
                        <input type="radio" name="options" id="Maps" autocomplete="off" checked> Maps
                    </label>
                    <label class="btn btn-secondary @(activeButtons == ActiveButton.Characters ? "active" : "")">
                        <input type="radio" name="options" id="Characters" autocomplete="off"> Characters
                    </label>
                </div>
            </div>
            <div class="row-5">

            </div>
            <div class="row-5">

            </div>
        </div>
        <div class="col-5 p-2 d-flex justify-content-center">
            <Savefile />
        </div>
    </div>
    <div class="row">
        <div class="col-5 p-2 d-flex justify-content-center">
            <button type="button" class="btn btn-primary">Download</button>
        </div>
        <div class="col-2">
        </div>
        <div class="col-5 p-2 d-flex justify-content-center">
            <button type="button" class="btn btn-primary">Download</button>
        </div>
    </div>
</div>

@code{
    enum ActiveButton
    {
        Maps,
        Characters
    }

    private ActiveButton activeButtons = ActiveButton.Maps;
}